            <ImageView
                android:id="@+id/details_pro_image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/booksapplogo" />

            <TextView
                android:id="@+id/details_show_pro_price"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_pro_image4"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="15dp"
                android:text="Price"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/details_show_pro_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_pro_image4"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="8dp"
                android:text="Name"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/details_show_pro_desp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_show_pro_name"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="Description"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/details_show_pro_date"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_show_pro_desp"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="15dp"
                android:text="Date"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/details_show_pro_time"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_show_pro_desp"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="15dp"
                android:text="Time"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/number_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="6dp"
                app:initialNumber="1"
                app:finalNumber="10"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/details_show_pro_time"
                android:layout_marginTop="10dp"
                ></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


            <Button
                android:id="@+id/details_show_pro_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/number_btn"
                android:background="@drawable/buttons"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="15dp"
                android:text="Add to cart"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>