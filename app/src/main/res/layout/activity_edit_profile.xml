<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/edit_register_applogo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/booksapplogo"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50dp"
                />

            <EditText
                android:id="@+id/edit_seller_reg_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_register_applogo"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="Name"
                android:textAllCaps="true"
                android:maxLength="20"
                android:inputType="textPersonName"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_seller_reg_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_seller_reg_name"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:maxLength="20"
                android:layout_marginLeft="15dp"
                android:hint="Email address"
                android:inputType="textPersonName"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />





            <EditText
                android:id="@+id/edit_seller_reg_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_seller_reg_email"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="Address"
                android:maxLength="20"
                android:inputType="textPersonName"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_seller_reg_pan_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_seller_reg_company_name"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textAllCaps="true"
                android:hint="Pin Code"
                android:maxLength="20"
                android:inputType="number"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_seller_reg_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_seller_reg_pan_card"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="City"
                android:textAllCaps="true"
                android:maxLength="20"
                android:inputType="textPersonName"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_seller_reg_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_seller_reg_city"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="State"
                android:textAllCaps="true"
                android:maxLength="20"
                android:inputType="textPersonName"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/edit_seller_reg_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_seller_reg_state"
                android:background="@drawable/buttons"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:text="Update"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>