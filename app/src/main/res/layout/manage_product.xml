<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pro_image"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/booksapplogo"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/show_pro_price"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pro_image"
            android:background="@drawable/inputs"
            android:padding="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="15dp"
            android:text="Price"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/show_pro_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pro_image"
            android:background="@drawable/inputs"
            android:padding="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="8dp"
            android:text="Name"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/show_pro_desp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_pro_name"
            android:background="@drawable/inputs"
            android:padding="20dp"
            android:maxLength="30"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="Description"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/show_pro_date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_pro_desp"
            android:background="@drawable/inputs"
            android:padding="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="15dp"
            android:text="Date"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/show_pro_time"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_pro_desp"
            android:background="@drawable/inputs"
            android:padding="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="15dp"
            android:text="Time"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="17sp"
            android:textStyle="bold"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>