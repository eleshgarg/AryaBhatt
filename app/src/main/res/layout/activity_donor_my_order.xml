<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorMyOrderActivity">

    <Button
        android:id="@+id/confirm_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Orders"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:padding="9dp"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_toRightOf="@+id/search_product_name"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_menu1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/confirm_orders_btn"
        android:scrollbars="vertical"
        ></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>