<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AdminActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/admin_register_applogo"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:src="@drawable/booksapplogo"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                />

            <TextView
                android:id="@+id/admin_seller_login_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/admin_register_applogo"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textAlignment="center"
                android:text="Welcome in Admin Section"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />



            <Button
                android:id="@+id/admin_seller_login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/admin_seller_login_email_address"
                android:background="@drawable/buttons"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="Send Notifications"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </ScrollView>



</LinearLayout>