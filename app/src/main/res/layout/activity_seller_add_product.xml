            </LinearLayout>

            <EditText
                android:id="@+id/seller_pro_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearl1"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="Product Name"
                android:inputType="textPersonName"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/seller_pro_desp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_pro_name"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="Product Description"
                android:inputType="textPersonName"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/seller_pro_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_pro_desp"
                android:background="@drawable/inputs"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="Product Price in INR"
                android:inputType="number"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/seller_pro_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_pro_price"
                android:background="@drawable/buttons"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="Add Product"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            //Manage Products
            <Button
                android:id="@+id/seller_pro_manage_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_pro_button"
                android:background="@drawable/buttons"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="MY Products"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/seller_pro_myorders_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_pro_manage_button"
                android:background="@drawable/buttons"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:text="MY Orders"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                />

        </RelativeLayout>

